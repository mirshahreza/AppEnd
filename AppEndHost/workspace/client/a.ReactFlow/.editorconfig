# EditorConfig helps maintain consistent coding styles
root = true

[*]
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true

[*.js]
indent_style = space
indent_size = 2

[*.jsx]
indent_style = space
indent_size = 2

[*.json]
indent_style = space
indent_size = 2

[*.html]
indent_style = space
indent_size = 2

[*.css]
indent_style = space
indent_size = 2

[*.vue]
indent_style = space
indent_size = 4

[*.csharp]
indent_style = space
indent_size = 4
